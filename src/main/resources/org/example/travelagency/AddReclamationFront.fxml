<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.travelagency.AddReclamationFrontController">
    <children>
        <!-- Sidebar -->
        <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #023047; -fx-border-radius: 15px; -fx-padding: 20px;">
            <VBox layoutX="10.0" layoutY="20.0" spacing="20.0" />
        </AnchorPane>

        <!-- Main Content -->
        <AnchorPane layoutX="220.0" layoutY="70.0" prefHeight="500.0" prefWidth="1010.0" style="-fx-background-color: #f9f9f9; -fx-border-radius: 15px; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 2);">
            <!-- Card Form -->
            <VBox spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

                <!-- Email Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label prefWidth="120.0" text="Email:" />
                    <TextField fx:id="emailField" editable="false" prefWidth="400.0" promptText="Entrez votre email" style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />
                </HBox>

                <!-- Type Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label prefWidth="120.0" text="Type:" />
                    <ComboBox fx:id="typeComboBox" prefWidth="400.0" promptText="SÃ©lectionnez un type" />
                </HBox>

                <!-- Description Field -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label prefWidth="120.0" text="Description:" />
                    <TextArea fx:id="descriptionField" prefHeight="150.0" prefWidth="400.0" promptText="Entrez une description" style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />
                </HBox>

                <!-- Buttons -->
                <HBox alignment="TOP_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
                    <Button fx:id="ajouterButton" onMouseClicked="#onAjouterButtonClicked" style="-fx-background-color: #0288d1; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="Ajouter" />
                </HBox>
            </VBox>
        </AnchorPane>
    </children>
</AnchorPane>
