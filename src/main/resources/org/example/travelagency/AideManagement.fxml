<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="org.example.travelagency.AideController">

    <children>
        <!-- Barre de menu -->
        <MenuBar layoutX="0" layoutY="0" prefWidth="1000.0">
            <menus>
                <Menu text="Gestion des agents">
                    <MenuItem text="Gérer les agents" onAction="#openGestionAgents"/>
                </Menu>
                <Menu text="Aide">
                    <MenuItem text="Gérer la rubrique d'aide" disable="true"/>
                </Menu>
            </menus>
        </MenuBar>
        <!-- Menu vertical -->
        <AnchorPane layoutY="25.0" prefWidth="200.0" prefHeight="575.0" style="-fx-background-color: #023047;">
            <children>
                <Hyperlink layoutX="10.0" layoutY="525.0" text="Déconnexion" onAction="#changerVue"
                           userData="Login.fxml"
                           style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </children>
        </AnchorPane>

        <!-- Contenu principal -->
        <AnchorPane layoutX="200.0" layoutY="25.0" prefHeight="575.0" prefWidth="800.0"
                    style="-fx-background-color: #f8f9fa;">
            <children>
                <ComboBox fx:id="cbFiltre" layoutX="600.0" layoutY="40.0" prefWidth="180.0"
                          onAction="#filtrerQuestions"/>

                <!-- En-tête avec le titre -->
                <Label layoutX="20.0" layoutY="20.0" text="Gestion des FAQ"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #023047;"/>

                <!-- Tableau pour afficher les FAQs -->
                <TableView fx:id="tableAide" layoutX="20.0" layoutY="70.0" prefHeight="200.0" prefWidth="760.0">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                        <TableColumn fx:id="colQuestion" text="Question" prefWidth="330"/>
                        <TableColumn fx:id="colReponse" text="Réponse" prefWidth="330"/>
                    </columns>
                </TableView>

                <!-- Formulaire d'ajout/modification -->
                <VBox layoutX="20.0" layoutY="290.0" spacing="10.0">
                    <children>
                        <TextField fx:id="txtQuestion" promptText="Saisir une question" prefWidth="760.0"
                                   style="-fx-background-color: #ffffff; -fx-border-color: #8ECAE6;
                                          -fx-border-radius: 8px; -fx-padding: 8px;"/>

                        <TextField fx:id="txtReponse" promptText="Saisir une réponse" prefWidth="760.0"
                                   style="-fx-background-color: #ffffff; -fx-border-color: #8ECAE6;
                                          -fx-border-radius: 8px; -fx-padding: 8px;"/>

                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterAide"
                                        style="-fx-background-color: #023047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>

                                <Button fx:id="btnModifier" text="Modifier" onAction="#modifierAide"
                                        style="-fx-background-color: #8ECAE6; -fx-text-fill: #023047; -fx-font-weight: bold; -fx-background-radius: 8px;"/>

                                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerAide"
                                        style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
