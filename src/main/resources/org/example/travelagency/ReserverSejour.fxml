<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/javafx" xmlns="http://javafx.com/fxml"
           fx:controller="org.example.travelagency.ReservationSejourHotelController"
           style="-fx-background-color: #f4f4f4;">
    <children>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <!-- Titre -->
            <Label text="Réservation du Séjour Hôtel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!-- Informations sur le séjour -->
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Nom de l'Hôtel :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Label fx:id="nomHotelLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Adresse :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Label fx:id="adresseLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Nombre d'Étoiles :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Label fx:id="nbrEtoilesLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Tarif par Nuit (€) :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Label fx:id="tarifParNuitLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
                </HBox>
            </VBox>

            <!-- Formulaire de réservation -->
            <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 10px;">
                <HBox spacing="10">
                    <Label text="Nombre de Participants :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Spinner fx:id="nbrParticipantsSpinner" minWidth="60"
                             style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Nombre de Nuitées :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <Spinner fx:id="nbrNuiteesSpinner" minWidth="60"
                             style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Date d'Arrivée :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <DatePicker fx:id="dateArriveePicker"
                                style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Mode de Paiement :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                    <ComboBox fx:id="modePaiementComboBox"
                              style="-fx-background-color: #ffffff; -fx-border-radius: 5px;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="En ligne" />
                                <String fx:value="Sur place" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
            </VBox>

            <!-- Boutons -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <Button fx:id="confirmerButton" text="Valider"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 5 15;" />
                <Button fx:id="annulerButton" text="Annuler"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 5 15;" />
            </HBox>
        </VBox>
    </children>
</StackPane>
