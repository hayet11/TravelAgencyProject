<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.travelagency.ListReclamationBackController">
    <children>
        <!-- Sidebar -->
        <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #023047; -fx-border-radius: 15px; -fx-padding: 20px;">
            <VBox layoutX="10.0" layoutY="20.0" spacing="20.0">
                <Button fx:id="listeReclamationsButton" onAction="#onListeReclamationsButtonClicked" style="-fx-background-color: #006F8E; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-border-color: #023047; -fx-pref-width: 160px; -fx-padding: 10px;" text="Réclamations" />
                <Button fx:id="statistiquesButton" onAction="#onStatistiquesButtonClicked" style="-fx-background-color: #006F8E; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px; -fx-border-color: #023047; -fx-pref-width: 160px; -fx-padding: 10px;" text="Statistiques" />
            </VBox>
        </AnchorPane>

        <!-- Search Bar -->
        <TextField fx:id="searchField" layoutX="220.0" layoutY="20.0" prefWidth="300.0" promptText="Rechercher" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px;" />

        <!-- Table for Reclamations -->
        <TableView fx:id="tableView" layoutX="220.0" layoutY="70.0" prefHeight="500.0" prefWidth="1010.0" style="-fx-background-color: #f9f9f9; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 2);">
            <columns>
                <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="colType" prefWidth="120.0" text="Type" />
                <TableColumn fx:id="colDescription" prefWidth="250.0" text="Description" />
                <TableColumn fx:id="colEtat" prefWidth="100.0" text="État" />
                <TableColumn fx:id="colActions" prefWidth="150.0" text="Actions" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
