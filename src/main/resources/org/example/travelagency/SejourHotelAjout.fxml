<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="402.0" prefWidth="773.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.travelagency.CreateSejourHotelController">
    <children>
        <!-- Sidebar -->
        <AnchorPane prefHeight="401.0" prefWidth="200.0" style="-fx-background-color: #023047; -fx-border-radius: 15px; -fx-padding: 15px;" />

        <!-- Form Elements -->
        <Label layoutX="220.0" layoutY="20.0" text="Créer un Séjour Hôtel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #023047;" />

        <!-- Nom de l'Hôtel -->
        <Label layoutX="220.0" layoutY="60.0" text="Nom de l'Hôtel :" style="-fx-text-fill: #023047;" />
        <TextField fx:id="nomHotelField" layoutX="370.0" layoutY="55.0" prefWidth="300.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-text-fill: #023047;" />

        <!-- Nombre de Chambres Disponibles -->
        <Label layoutX="220.0" layoutY="100.0" text="Nombre de Chambres :" style="-fx-text-fill: #023047;" />
        <Spinner fx:id="nbrChambresSpinner" layoutX="370.0" layoutY="95.0" prefWidth="120.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />

        <!-- Adresse -->
        <Label layoutX="220.0" layoutY="140.0" text="Adresse :" style="-fx-text-fill: #023047;" />
        <TextField fx:id="adresseField" layoutX="370.0" layoutY="135.0" prefWidth="300.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-text-fill: #023047;" />

        <!-- Nombre d'Étoiles -->
        <Label layoutX="220.0" layoutY="180.0" text="Nombre d'Étoiles :" style="-fx-text-fill: #023047;" />
        <Spinner fx:id="nbrEtoilesSpinner" layoutX="370.0" layoutY="175.0" prefWidth="120.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px;" />

        <!-- Tarif par Nuit -->
        <Label layoutX="220.0" layoutY="220.0" text="Tarif par Nuit (€) :" style="-fx-text-fill: #023047;" />
        <TextField fx:id="tarifParNuitField" layoutX="370.0" layoutY="215.0" prefWidth="120.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-text-fill: #023047;" />



        <!-- Description -->
        <Label layoutX="220.0" layoutY="300.0" text="Description :" style="-fx-text-fill: #023047;" />
        <TextArea fx:id="descriptionField" layoutX="370.0" layoutY="295.0" prefWidth="300.0" prefHeight="60.0" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-text-fill: #023047;" />

        <!-- Buttons -->
        <Button fx:id="createButton" layoutX="370.0" layoutY="370.0" prefWidth="100.0" text="Créer" style="-fx-background-color: #0288d1; -fx-text-fill: white; -fx-border-radius: 5px;" />
        <Button fx:id="cancelButton" layoutX="490.0" layoutY="370.0" prefWidth="100.0" text="Annuler" style="-fx-background-color: #e63946; -fx-text-fill: white; -fx-border-radius: 5px;" />
    </children>
</AnchorPane>
