<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<StackPane xmlns:fx="http://javafx.com/javafx" xmlns="http://javafx.com/javafx/8" fx:controller="org.example.travelagency.ConsulterSejourHotelController" style="-fx-background-color: #f4f4f4;">
    <children>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <!-- Titre -->
            <Label text="Détails du Séjour Hôtel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!-- Nom de l'hôtel -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Nom de l'Hôtel :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label fx:id="nomHotelLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
            </HBox>

            <!-- Nombre de chambres disponibles -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Nombre de Chambres Disponibles :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label fx:id="nbrChambresDispoLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
            </HBox>

            <!-- Adresse -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Adresse :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label fx:id="adresseLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
            </HBox>

            <!-- Nombre d'étoiles -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Nombre d'Étoiles :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label fx:id="nbrEtoilesLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
            </HBox>

            <!-- Tarif par nuit -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Tarif par Nuit :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label fx:id="tarifParNuitLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
            </HBox>

            <!-- Note moyenne -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Description  :" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
            </HBox>

            <!-- Boutons d'actions -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                <Button fx:id="Modifier" text="Modifier"
                        style="-fx-background-color: #cccccc; -fx-text-fill: #333; -fx-border-radius: 5px; -fx-padding: 5 15;" />
                <Button fx:id="Suprimmer" text="Suprimmer"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 5 15;" />
            </HBox>
        </VBox>
    </children>
</StackPane>
