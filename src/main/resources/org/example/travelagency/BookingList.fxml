<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="402.0" prefWidth="773.0"
            xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.travelagency.BookingListController">
    <children>
        <VBox>
            <MenuBar layoutX="0" layoutY="0" prefWidth="744.0">
                <menus>
                    <Menu text="Vols">
                        <MenuItem text="Liste des vols" onAction="#changerVue" userData="ListFlight.fxml"/>
                        <MenuItem text="Ajouter un vol" onAction="#changerVue" userData="AddFlight.fxml"/>
                    </Menu>
                    <Menu text="Voyages">
                        <MenuItem text="Tous les voyages" disable="true"/>
                        <MenuItem text="Nouveau voyage" onAction="#changerVue" userData="AddTripForm.fxml"/>
                    </Menu>
                    <Menu text="Séjours">
                        <MenuItem text="Hôtels" onAction="#changerVue" userData="SejoutHotelList.fxml"/>
                        <MenuItem text="Activités"/>
                    </Menu>
                    <Menu text="Partenaires">
                        <MenuItem text="Gérer les partenaires" onAction="#changerVue" userData="GererPartenaires.fxml"/>
                    </Menu>
                    <Menu text="Aide">
                        <MenuItem text="Consulter la rubrique d'aide" onAction="#changerVue" userData="AideUser.fxml"/>
                    </Menu>
                </menus>
            </MenuBar>
            <AnchorPane fx:id="rootPane" prefWidth="400.0" prefHeight="700.0"/>
        </VBox>

        <!-- Sidebar -->
        <AnchorPane layoutY="25.0" prefHeight="401.0" prefWidth="200.0"
                    style="-fx-background-color: #023047; -fx-border-radius: 15px; -fx-padding: 15px;"/>

        <!-- Table for Bookings -->
        <TableView fx:id="tableView" editable="true" layoutX="220.0" layoutY="93.0" prefHeight="307.0"
                   style="-fx-background-color: #f9f9f9; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, #000000, 5, 0.5, 0, 2);"
                   AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="93.0">
            <columns>
                <TableColumn fx:id="dateDepartCol" prefWidth="75.0" text="Date Départ"/>
                <TableColumn fx:id="itineraryCol" prefWidth="75.0" text="Itinéraires"/>
                <TableColumn fx:id="guideCol" prefWidth="75.0" text="Avec Guide?"/>
                <TableColumn fx:id="tariffCol" prefWidth="75.0" text="Tarif"/>
                <TableColumn fx:id="descriptionCol" prefWidth="100.0" text="Description"/>
                <TableColumn fx:id="actionCol" prefWidth="160.0" text="Actions"/>
            </columns>
        </TableView>

        <!-- Date Picker -->
        <DatePicker fx:id="datePicker" layoutX="370.0" layoutY="22.0"
                    style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-text-fill: #023047;"/>

        <!-- Label for Date Picker -->
        <Label layoutX="210.0" layoutY="26.0"
               style="-fx-font-size: 16px; -fx-text-fill: #023047; -fx-font-weight: bold;" text="Rechercher par date"/>

        <!-- Search Button -->
        <Button fx:id="searchButton" layoutX="590.0" layoutY="22.0" onAction="#onSearch"
                style="-fx-background-color: #0288d1; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"
                text="Rechercher"/>

        <!-- Refresh Button -->
        <Button fx:id="refreshButton" layoutX="685.0" layoutY="23.0" onAction="#onSearch"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"
                text="Rafraîchir"/>
    </children>
</AnchorPane>
